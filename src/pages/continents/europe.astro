---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';
import { db } from '../../db';
import { continent, country, location, post } from '../../db/schema';
import { eq, and, sql, count } from 'drizzle-orm';
import fidoughImage from '../../assets/fidough.png';
import { getCountryPreview } from '../../config/countries';
import { url } from '../../utils/url';

// Get all countries in Europe that have posts (published or unpublished)
const europeanCountriesWithPosts = await db
  .select({
    countryId: country.id,
    countryName: country.name,
    postCount: count(post.id)
  })
  .from(continent)
  .innerJoin(country, eq(country.continentId, continent.id))
  .innerJoin(location, eq(location.countryId, country.id))
  .innerJoin(post, eq(post.locationId, location.id)) // Get all posts regardless of published status
  .where(eq(continent.name, 'Europe'))
  .groupBy(country.id, country.name)
  .all();

// Debug: log the results
console.log('European countries with posts:', europeanCountriesWithPosts);

// Default image for countries without specific images
const defaultImage = fidoughImage.src;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={`Europe - ${SITE_TITLE}`} description="European countries I've visited" />
	</head>
	<body>
		<Header />
		<main>
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
				<!-- Page Header -->
				<div class="text-center mb-12">
					<h1 class="title-font text-5xl md:text-6xl font-bold text-pink-400 mb-6 leading-tight">
						Europe
					</h1>
					<p class="text-gray-600 max-w-2xl mx-auto">
						Exploring the diverse cultures, stunning landscapes, and rich history across Europe. 
						Here are the countries that I have visited and documented my travels in.
					</p>
				</div>

				<!-- Countries Grid -->
				{europeanCountriesWithPosts.length > 0 ? (
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
						{europeanCountriesWithPosts.map((countryData) => (
							<div onclick={`location.href='${url(`/countries/${countryData.countryName.toLowerCase().replace(/\s+/g, '-')}`)}'`} class="country-card bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300 cursor-pointer">
								<div class="h-48 overflow-hidden">
									<img
										src={defaultImage}
										alt={countryData.countryName}
										class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
									/>
								</div>
								<div class="p-6">
									<div class="flex items-center justify-between mb-3">
										<h3 class="title-font text-xl font-semibold text-gray-800">
											{countryData.countryName}
										</h3>
										<span class="bg-pink-100 text-pink-600 px-3 py-1 rounded-full text-sm font-medium">
											{countryData.postCount} {countryData.postCount === 1 ? 'post' : 'posts'}
										</span>
									</div>
									<p class="text-gray-600 mb-4">
										{getCountryPreview(countryData.countryName)}
									</p>
									<a
										href={url(`/countries/${countryData.countryName.toLowerCase().replace(/\s+/g, '-')}`)}
										class="inline-flex items-center text-pink-500 hover:text-pink-700 font-medium transition-colors duration-200"
									>
										Explore {countryData.countryName}
										<i class="fas fa-arrow-right ml-2"></i>
									</a>
								</div>
							</div>
						))}
					</div>
				) : (
					<div class="text-center py-12">
						<div class="text-gray-400 mb-4">
							<i class="fas fa-map-marked-alt text-6xl"></i>
						</div>
						<h3 class="text-xl font-semibold text-gray-600 mb-2">No European Adventures Yet</h3>
						<p class="text-gray-500">
							Stay tuned for upcoming European travel stories and adventures!
						</p>
					</div>
				)}
			</div>
		</main>
		<Footer />
	</body>
</html>
