---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
import clefairyAtWorkImage from '../assets/clefairy_at_work.png';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={`Travels - ${SITE_TITLE}`} description="My travel experiences and adventures" />
	</head>
	<body>
		<Header />
		<main>
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
				<!-- Page Header -->
				<div class="text-center mb-8">
					<h1 class="title-font text-5xl md:text-6xl font-bold text-pink-400 mb-6 leading-tight">
						Travels
					</h1>
					<p class="text-gray-600 max-w-2xl mx-auto">
						This page is dedicated to my individual travels. They are grouped together to show a consecutive journey I took. 
					</p>
				</div>

				<!-- Work in Progress Section -->
				<div class="text-center">
					<div class="mb-8">
						<video 
							width="480" 
							height="192" 
							autoplay 
							loop 
							muted 
							playsinline
							class="mx-auto mt-4 rounded-lg"
						>
							<source src="https://media.giphy.com/media/6aOp0QSnZDerNlZn5c/giphy.mp4" type="video/mp4">
							<source src="https://media.giphy.com/media/6aOp0QSnZDerNlZn5c/giphy.webm" type="video/webm">
							<!-- Fallback to GIF for older browsers -->
							<img src="https://media.giphy.com/media/6aOp0QSnZDerNlZn5c/giphy.gif" alt="Clefairy Pokemon" width="480" height="192" />
						</video>
					</div>
					<h2 class="text-3xl font-bold text-gray-800 mb-4">Work in Progress</h2>
					<p class="text-gray-600 text-lg max-w-md mx-auto">
						I'm currently working on organizing all my travel stories and experiences. 
						Check back soon for exciting content!
					</p>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
