---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import TravelMap from "../components/TravelMap.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from 'astro:content';
import { getNumberOfEnrichedPosts } from '../utils/blog-db';
import { url } from "../utils/url";
import { resolveImageUrl } from "../utils/image";

// Get all blog posts
const allPosts = await getCollection('blog');

// Get the 3 most recent posts sorted by publication date
const recentPosts = await getNumberOfEnrichedPosts(3);

// Prepare all post URLs for client-side random selection
const allPostUrls = allPosts.map(post => url(`/blog/${post.id.replace(/\.(md|mdx)$/, '')}`));
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<!-- Google tag (gtag.js) -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=G-9QVH8372V0"></script>
	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', 'G-9QVH8372V0');
	</script>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<div class="relative bg-gradient-to-br from-pink-50 via-white to-pink-25 min-h-[70vh] flex items-center">
				<div class="absolute inset-0 bg-gradient-to-b from-transparent to-white/20"></div>
				<div
					class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20 w-full"
				>
					<div class="text-center">
						<h1
							class="title-font text-5xl md:text-6xl font-bold text-pink-400 mb-6 leading-tight"
						>
							Nina's Travel Diary
						</h1>
						<p class="max-w-3xl mx-auto text-xl text-gray-600 leading-relaxed">
							I want to explore the world and remember my adventures.
							Maybe you will find some inspiration here too!
						</p>
						<div class="mt-8">
							<button
								id="randomPostBtn"
								class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-full shadow-lg text-white bg-pink-400 hover:bg-pink-500 transition-all duration-300 hover:shadow-xl transform hover:-translate-y-1 cursor-pointer"
							>
								Get Random Post
								<svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4l8 8-8 8M4 12h16"></path>
								</svg>
							</button>
						</div>
						
						
					</div>
				</div>
			</div>

			<!-- Travel Map Section -->
			<TravelMap />

			<!-- Recent Posts -->
			<div class="relative bg-gradient-to-b from-pink-50 to-white py-20">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="text-center mb-16">
						<h2
							class="title-font text-4xl font-semibold text-pink-400 mb-4"
						>
							Latest Adventures
						</h2>
						<p class="text-gray-600 max-w-2xl mx-auto text-lg">
							My most recent travel stories and discoveries
						</p>
					</div>

					<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
						{recentPosts.map((post) => (
							<a 
								href={url(post.markdownData?.url || `/blog/post-${post.id}`)}
								class="post-card bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300 block"
							>
								<div class="h-48 overflow-hidden">
									{post.markdownData?.heroImage ? (
										<img
											src={resolveImageUrl(post.markdownData.heroImage)}
											alt={post.title}
											class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
										/>
									) : (
										<div class="w-full h-full bg-gradient-to-br from-pink-100 to-blue-100 flex items-center justify-center">
											<div class="text-center">
												<i class="fas fa-camera text-4xl text-pink-400 mb-2"></i>
												<p class="text-gray-600 text-sm">Photo coming soon</p>
											</div>
										</div>
									)}
								</div>
								<div class="p-6">
									<div class="flex items-center text-sm text-pink-400 mb-2">
										<i class="fas fa-map-marker-alt mr-1"></i>
										<span>{post.location}</span>
										{post.startDate && (
											<>
												<span class="mx-2">â€¢</span>
												<span>
													{new Date(post.startDate).toLocaleDateString('en-GB')}
													{post.endDate && (
														<> - {new Date(post.endDate).toLocaleDateString('en-GB')}</>
													)}
												</span>
											</>
										)}
									</div>
									<h3 class="title-font text-xl font-semibold text-gray-800 mb-3">
										{post.title.replace(/_/g, ' ')}
									</h3>
									<p class="text-gray-600 mb-4">
										{post.markdownData?.description || 'Read about my experiences and discoveries in this beautiful location in Belgium.'}
									</p>
									<div class="inline-flex items-center text-pink-500 hover:text-pink-700 font-medium transition-colors duration-200">
										Read more
										<i class="fas fa-arrow-right ml-2"></i>
									</div>
								</div>
							</a>
						))}
					</div>

				<div class="text-center mt-16">
					<a
						href={url("/blog")}
						class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-full shadow-lg text-white bg-pink-400 hover:bg-pink-500 transition-all duration-300 hover:shadow-xl transform hover:-translate-y-1"
					>
						View All Adventures
						<svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
						</svg>
					</a>
				</div>
			</div>
		</div>

		</main>
		<Footer />

		<script is:inline>
			// Enhanced map marker interactions
			const markers = document.querySelectorAll(".map-marker");
			const tooltip = document.querySelector(".map-tooltip");

			markers.forEach((marker) => {
				marker.addEventListener("mouseenter", function () {
					// Remove active class from all markers
					markers.forEach((m) => m.classList.remove("active"));

					// Add active class to current marker
					this.classList.add("active");

					// Position and show tooltip
					const location = this.getAttribute("data-location");
					const description = this.getAttribute("data-description");
					
					if (tooltip && location) {
						tooltip.innerHTML = `
							<div class="font-semibold text-pink-600">${location}</div>
							<div class="text-gray-600 text-xs mt-1">${description || ''}</div>
						`;

						const rect = this.getBoundingClientRect();
						const mapRect = this.parentElement?.getBoundingClientRect();
						
						if (mapRect) {
							tooltip.style.left = `${rect.left - mapRect.left + rect.width / 2}px`;
							tooltip.style.top = `${rect.top - mapRect.top - 50}px`;
							tooltip.style.opacity = "1";
							tooltip.style.transform = "translateX(-50%) translateY(0)";
						}
					}
				});

				marker.addEventListener("mouseleave", function () {
					this.classList.remove("active");
					if (tooltip) {
						tooltip.style.opacity = "0";
						tooltip.style.transform = "translateX(-50%) translateY(-10px)";
					}
				});

				// Add click functionality for mobile
				marker.addEventListener("click", function () {
					const location = this.getAttribute("data-location");
					const description = this.getAttribute("data-description");
					
					if (location) {
						alert(`${location}\n${description || ''}`);
					}
				});
			});

			// Smooth scroll for anchor links
			document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
				anchor.addEventListener("click", function (e) {
					e.preventDefault();
					const target = document.querySelector(this.getAttribute("href") || '');
					if (target) {
						target.scrollIntoView({
							behavior: "smooth",
						});
					}
				});
			});

			// Add subtle parallax effect to hero section
			window.addEventListener('scroll', () => {
				const scrolled = window.pageYOffset;
				const hero = document.querySelector('.bg-gradient-to-br');
				if (hero && scrolled < window.innerHeight) {
					// Only apply parallax when hero is visible and limit the effect
					hero.style.transform = `translateY(${scrolled * 0.2}px)`;
				}
			});

		</script>

		<script is:inline define:vars={{ allPostUrls }}>
			// Random post functionality
			document.addEventListener('DOMContentLoaded', () => {
				const randomBtn = document.getElementById('randomPostBtn');
				if (randomBtn && allPostUrls.length > 0) {
					randomBtn.addEventListener('click', () => {
						const randomIndex = Math.floor(Math.random() * allPostUrls.length);
						const randomUrl = allPostUrls[randomIndex];
						window.location.href = randomUrl;
					});
				}
			});
		</script>

