---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<div class="relative bg-gradient-to-br from-pink-50 via-white to-pink-25 min-h-[70vh] flex items-center">
				<div class="absolute inset-0 bg-gradient-to-b from-transparent to-white/20"></div>
				<div
					class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20 w-full"
				>
					<div class="text-center">
						<h1
							class="title-font text-5xl md:text-6xl font-bold text-pink-400 mb-6 leading-tight"
						>
							Nina's Travel Diary
						</h1>
						<p class="max-w-3xl mx-auto text-xl text-gray-600 leading-relaxed">
							Chronicles of a wanderlust soul exploring the world
							one flight at a time
						</p>
						<div class="mt-8">
							<a
								href="#journey"
								class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-full shadow-lg text-white bg-pink-400 hover:bg-pink-500 transition-all duration-300 hover:shadow-xl transform hover:-translate-y-1"
							>
								Start Exploring
								<svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>

			<!-- Travel Map Section -->
			<div id="journey" class="relative bg-gradient-to-b from-white to-pink-50 py-20">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="text-center mb-16">
						<h2
							class="title-font text-4xl font-semibold text-pink-400 mb-4"
						>
							My Journey So Far
						</h2>
						<p class="text-gray-600 max-w-2xl mx-auto text-lg">
							Hover over the markers to discover the places that have captured my heart
						</p>
					</div>

					<div
						class="relative bg-white rounded-2xl shadow-xl overflow-hidden border border-pink-100"
						style="height: 500px;"
					>
						<div class="absolute inset-0 bg-gradient-to-br from-pink-50/30 to-blue-50/30"></div>
						<img
							src="/src/assets/world.svg"
							alt="World Map"
							class="w-full h-full object-cover opacity-60"
						/>

						<!-- Enhanced Map Markers -->
						<div
							class="map-marker pulse-animation"
							style="top: 30%; left: 75%;"
							data-location="New York, USA"
							data-description="The city that never sleeps welcomed me with open arms"
						>
						</div>
						<div
							class="map-marker pulse-animation"
							style="top: 40%; left: 50%;"
							data-location="Paris, France"
							data-description="Lost among the romantic streets and charming cafés"
						>
						</div>
						<div
							class="map-marker pulse-animation"
							style="top: 60%; left: 70%;"
							data-location="Bali, Indonesia"
							data-description="Found peace among the rice terraces and temples"
						>
						</div>
						<div
							class="map-marker pulse-animation"
							style="top: 35%; left: 85%;"
							data-location="Tokyo, Japan"
							data-description="Where tradition meets futuristic innovation"
						>
						</div>
						<div
							class="map-marker pulse-animation"
							style="top: 55%; left: 60%;"
							data-location="Cairo, Egypt"
							data-description="Walked in the shadows of ancient pyramids"
						>
						</div>
						<div
							class="map-marker pulse-animation"
							style="top: 25%; left: 55%;"
							data-location="London, England"
							data-description="Rainy days and cozy pubs stole my heart"
						>
						</div>

						<div class="map-tooltip"></div>
					</div>
				</div>
			</div>

			<!-- Recent Posts -->
			<div class="relative bg-gradient-to-b from-pink-50 to-white py-20">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="text-center mb-16">
						<h2
							class="title-font text-4xl font-semibold text-pink-400 mb-4"
						>
							Latest Adventures
						</h2>
						<p class="text-gray-600 max-w-2xl mx-auto text-lg">
							My most recent travel stories and discoveries
						</p>
					</div>

					<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<!-- Post 1 -->
					<div
						class="post-card bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl"
					>
						<div class="h-48 overflow-hidden">
							<img
								src="https://images.unsplash.com/photo-1520250497591-112f2f40a3f4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80"
								alt="Bali Sunset"
								class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
							/>
						</div>
						<div class="p-6">
							<div
								class="flex items-center text-sm text-pink-400 mb-2"
							>
								<i class="fas fa-map-marker-alt mr-1"></i>
								<span>Bali, Indonesia</span>
								<span class="mx-2">•</span>
								<span>May 15, 2023</span>
							</div>
							<h3
								class="title-font text-xl font-semibold text-gray-800 mb-3"
							>
								Chasing Sunsets in Uluwatu
							</h3>
							<p class="text-gray-500 mb-4">
								The cliffs of Uluwatu offered the most
								breathtaking sunset views I've ever witnessed.
								The way the golden light danced on the waves...
							</p>
							<a
								href="#"
								class="inline-flex items-center text-pink-500 hover:text-pink-700 font-medium"
							>
								Read more
								<i class="fas fa-arrow-right ml-2"></i>
							</a>
						</div>
					</div>

					<!-- Post 2 -->
					<div
						class="post-card bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl"
					>
						<div class="h-48 overflow-hidden">
							<img
								src="https://images.unsplash.com/photo-1502602898657-3e91760cbb34?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1473&q=80"
								alt="Paris Streets"
								class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
							/>
						</div>
						<div class="p-6">
							<div
								class="flex items-center text-sm text-pink-400 mb-2"
							>
								<i class="fas fa-map-marker-alt mr-1"></i>
								<span>Paris, France</span>
								<span class="mx-2">•</span>
								<span>March 22, 2023</span>
							</div>
							<h3
								class="title-font text-xl font-semibold text-gray-800 mb-3"
							>
								A Rainy Day in Montmartre
							</h3>
							<p class="text-gray-500 mb-4">
								There's something magical about Paris in the
								rain. The cobblestone streets of Montmartre
								glistened as I wandered from café to café...
							</p>
							<a
								href="#"
								class="inline-flex items-center text-pink-500 hover:text-pink-700 font-medium"
							>
								Read more
								<i class="fas fa-arrow-right ml-2"></i>
							</a>
						</div>
					</div>

					<!-- Post 3 -->
					<div
						class="post-card bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl"
					>
						<div class="h-48 overflow-hidden">
							<img
								src="https://images.unsplash.com/photo-1492571350019-22de08371fd3?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1453&q=80"
								alt="Tokyo Streets"
								class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
							/>
						</div>
						<div class="p-6">
							<div
								class="flex items-center text-sm text-pink-400 mb-2"
							>
								<i class="fas fa-map-marker-alt mr-1"></i>
								<span>Tokyo, Japan</span>
								<span class="mx-2">•</span>
								<span>January 8, 2023</span>
							</div>
							<h3
								class="title-font text-xl font-semibold text-gray-800 mb-3"
							>
								Lost in Translation in Shibuya
							</h3>
							<p class="text-gray-500 mb-4">
								Navigating the neon-lit streets of Shibuya with
								my limited Japanese was both challenging and
								exhilarating. The energy of this city is...
							</p>
							<a
								href="#"
								class="inline-flex items-center text-pink-500 hover:text-pink-700 font-medium"
							>
								Read more
								<i class="fas fa-arrow-right ml-2"></i>
							</a>
						</div>
					</div>
				</div>

				<div class="text-center mt-16">
					<a
						href="/blog"
						class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-full shadow-lg text-white bg-pink-400 hover:bg-pink-500 transition-all duration-300 hover:shadow-xl transform hover:-translate-y-1"
					>
						View All Diary Entries
						<svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
						</svg>
					</a>
				</div>
			</div>
		</div>

		<!-- Newsletter -->
		<div class="relative bg-gradient-to-br from-pink-100 via-pink-50 to-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
				<div class="text-center">
					<h2
						class="title-font text-4xl font-semibold text-pink-400 mb-6"
					>
						Join My Travel Journey
					</h2>
					<p class="max-w-3xl mx-auto text-gray-600 mb-12 text-lg">
						Subscribe to get notified when I post new travel
						stories, hidden gems, and travel tips from around the world
					</p>

					<form class="mt-8 sm:mx-auto sm:max-w-lg sm:flex">
						<div class="min-w-0 flex-1">
							<label for="email" class="sr-only"
								>Email address</label
							>
							<input
								id="email"
								type="email"
								placeholder="Enter your email"
								class="block w-full px-6 py-4 text-base rounded-full border-2 border-pink-200 bg-white text-gray-800 shadow-sm focus:ring-2 focus:ring-pink-300 focus:border-pink-400 placeholder-pink-300 transition-all duration-300"
							/>
						</div>
						<div class="mt-4 sm:mt-0 sm:ml-4">
							<button
								type="submit"
								class="block w-full px-8 py-4 rounded-full shadow-lg bg-pink-400 text-white font-medium hover:bg-pink-500 focus:outline-none focus:ring-2 focus:ring-pink-300 focus:ring-offset-2 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-xl"
							>
								Subscribe
							</button>
						</div>
					</form>

					<p class="mt-6 text-sm text-gray-500">
						I respect your privacy. Unsubscribe at any time.
					</p>
				</div>
			</div>
		</div>
		</main>
		<Footer />

		<script>
			// Mobile menu toggle
			const mobileMenuButton = document.querySelector('[aria-controls="mobile-menu"]');
			if (mobileMenuButton) {
				mobileMenuButton.addEventListener("click", function () {
					const menu = document.getElementById("mobile-menu");
					if (menu) {
						menu.classList.toggle("hidden");
					}
				});
			}

			// Enhanced map marker interactions
			const markers = document.querySelectorAll(".map-marker");
			const tooltip = document.querySelector(".map-tooltip");

			markers.forEach((marker) => {
				marker.addEventListener("mouseenter", function () {
					// Remove active class from all markers
					markers.forEach((m) => m.classList.remove("active"));

					// Add active class to current marker
					this.classList.add("active");

					// Position and show tooltip
					const location = this.getAttribute("data-location");
					const description = this.getAttribute("data-description");
					
					if (tooltip && location) {
						tooltip.innerHTML = `
							<div class="font-semibold text-pink-600">${location}</div>
							<div class="text-gray-600 text-xs mt-1">${description || ''}</div>
						`;

						const rect = this.getBoundingClientRect();
						const mapRect = this.parentElement?.getBoundingClientRect();
						
						if (mapRect) {
							(tooltip as HTMLElement).style.left = `${rect.left - mapRect.left + rect.width / 2}px`;
							(tooltip as HTMLElement).style.top = `${rect.top - mapRect.top - 50}px`;
							(tooltip as HTMLElement).style.opacity = "1";
							(tooltip as HTMLElement).style.transform = "translateX(-50%) translateY(0)";
						}
					}
				});

				marker.addEventListener("mouseleave", function () {
					this.classList.remove("active");
					if (tooltip) {
						(tooltip as HTMLElement).style.opacity = "0";
						(tooltip as HTMLElement).style.transform = "translateX(-50%) translateY(-10px)";
					}
				});

				// Add click functionality for mobile
				marker.addEventListener("click", function () {
					const location = this.getAttribute("data-location");
					const description = this.getAttribute("data-description");
					
					if (location) {
						alert(`${location}\n${description || ''}`);
					}
				});
			});

			// Smooth scroll for anchor links
			document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
				anchor.addEventListener("click", function (e) {
					e.preventDefault();
					const target = document.querySelector(this.getAttribute("href") || '');
					if (target) {
						target.scrollIntoView({
							behavior: "smooth",
						});
					}
				});
			});

			// Add subtle parallax effect to hero section
			window.addEventListener('scroll', () => {
				const scrolled = window.pageYOffset;
				const hero = document.querySelector('.bg-gradient-to-br');
				if (hero) {
					(hero as HTMLElement).style.transform = `translateY(${scrolled * 0.5}px)`;
				}
			});
		</script>

		<!-- <script is:inline>
			// Center the map on load
			window.addEventListener("DOMContentLoaded", () => {
				const map = document.getElementById("draggable-map");
				const inner = map.querySelector(".map-inner");
				map.scrollLeft = (inner.offsetWidth - map.offsetWidth) / 2;
				map.scrollTop = (inner.offsetHeight - map.offsetHeight) / 2;
			});
		</script> -->
	</body>
</html>
