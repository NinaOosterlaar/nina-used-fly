---
const today = new Date();
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { url } from "../utils/url";
import cartoonArt from "../assets/cartoon-art.png";
---

<footer class="bg-white">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
			<div>
				<a href={url("/")} class="flex items-center">
					<i
						class="fas fa-plane-departure text-2xl text-pink-300 mr-2"
					></i>
					<span class="title-font text-xl font-semibold text-pink-400"
						>Nina Used Fly</span
					>
				</a>
				<p class="mt-4 text-gray-500">
					A personal travel diary sharing my adventures around the
					world.
				</p>
				<div class="mt-6 flex space-x-6">
					<a href="https://www.instagram.com/ninappelsap" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-pink-500">
						<i class="fab fa-instagram text-xl"></i>
					</a>
					<a href="https://github.com/ninaoosterlaar" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-pink-500">
						<i class="fab fa-github text-xl"></i>
					</a>
				</div>
			</div>

			<div class="grid grid-cols-2 gap-8">
				<div>
					<h3
						class="title-font text-sm font-semibold text-gray-500 tracking-wider uppercase"
					>
						Navigation
					</h3>
					<ul class="mt-4 space-y-2">
						<li>
							<a
								href={url("/")}
								class="text-gray-500 hover:text-pink-500"
								>Home</a>
						</li>
						<li>
							<a
								href={url("/travels")}
								class="text-gray-500 hover:text-pink-500"
								>Travels</a>
						</li>
						<li>
							<a
								href={url("/plans")}
								class="text-gray-500 hover:text-pink-500"
								>Plans</a>
						</li>
						<li>
							<a
								href={url("/about")}
								class="text-gray-500 hover:text-pink-500"
								>About</a>
						</li>
					</ul>
				</div>

				<div>
					<h3
						class="title-font text-sm font-semibold text-gray-500 tracking-wider uppercase"
					>
						Locations
					</h3>
					<ul class="mt-4 space-y-2">
						<li>
							<a
								href={url("/continents/europe")}
								class="text-gray-500 hover:text-pink-500"
								>Europe</a>
						</li>
						<li>
							<a
								href={url("/continents/asia")}
								class="text-gray-500 hover:text-pink-500"
								>Asia</a>
						</li>
						<li>
							<a
								href={url("/continents/africa")}
								class="text-gray-500 hover:text-pink-500"
								>Africa</a>
						</li>
						<li>
							<a
								href={url("/continents/australia")}
								class="text-gray-500 hover:text-pink-500"
								>Oceania</a>
						</li>
						<li>
							<a
								href={url("/continents/north-america")}
								class="text-gray-500 hover:text-pink-500"
								>North America</a>
						</li>
						<li>
							<a
								href={url("/continents/south-america")}
								class="text-gray-500 hover:text-pink-500"
								>South America</a>
						</li>
					</ul>
				</div>
			</div>

			<div class="flex items-start gap-4">
				<div class="flex-1">
					<h3
						class="title-font text-sm font-semibold text-gray-500 tracking-wider uppercase"
					>
						Contact
					</h3>
					<ul class="mt-4 space-y-2">
						<li class="flex items-start">
							<i class="fas fa-envelope text-pink-300 mt-1 mr-2"></i>
							<span class="text-gray-500">ninaoosterlaar@gmail.com</span>
						</li>
						<li class="flex items-start">
							<i class="fas fa-map-marker-alt text-pink-300 mt-1 mr-2"
							></i>
							<span class="text-gray-500"
								>Based in Delft, The Netherlands</span
							>
						</li>
					</ul>
				</div>
				<img
					src={cartoonArt.src}
					alt="Nina's cartoon avatar"
					class="w-30 h-30 rounded-full shadow-lg border-3 border-pink-200 flex-shrink-0"
				/>
			</div>
		</div>

		<div class="mt-12 pt-8 border-t border-gray-200">
			<p class="text-gray-500 text-sm text-center">
				&copy; 2025 Nina Used Fly. All rights reserved.
			</p>
		</div>
	</div>
</footer>
