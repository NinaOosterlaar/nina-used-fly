---
const today = new Date();
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<footer class="bg-white py-8 px-4 border-t border-gray-100">
	<div class="max-w-6xl mx-auto">
		<div class="flex flex-col md:flex-row justify-between items-center">
			<div class="mb-6 md:mb-0">
				<a
					href="#"
					class="text-2xl font-bold text-deep-pink flex items-center"
				>
					<i class="fas fa-plane-departure mr-2"></i>
					{SITE_TITLE}
				</a>
				<p class="text-gray-500 mt-2">
					{SITE_DESCRIPTION}
				</p>
			</div>

			<div class="flex space-x-6">
				<a href="#" class="text-gray-500 hover:text-deep-pink text-xl">
					<i class="fab fa-instagram"></i>
				</a>
				<a href="#" class="text-gray-500 hover:text-deep-pink text-xl">
					<i class="fab fa-github"></i>
				</a>
				<a href="#" class="text-gray-500 hover:text-deep-pink text-xl">
					<i class="fas fa-envelope"></i>
				</a>
			</div>
		</div>

		<div
			class="border-t border-gray-100 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center"
		>
			<p class="text-gray-500 text-sm mb-4 md:mb-0">
				&copy; {today.getFullYear()} Ninappelsap. All rights reserved.
			</p>
			<div class="flex space-x-6">
				<a href="#" class="text-gray-500 hover:text-deep-pink text-sm"
					>Privacy Policy</a
				>
				<a href="#" class="text-gray-500 hover:text-deep-pink text-sm"
					>Terms of Service</a
				>
				<a href="#" class="text-gray-500 hover:text-deep-pink text-sm"
					>Contact</a
				>
			</div>
		</div>
	</div>
</footer>
